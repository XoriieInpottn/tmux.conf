set -g default-command /bin/bash

unbind C-b
set -g prefix C-a

bind-key c new-window -c '#{pane_current_path}'
bind-key % split-window -h -c '#{pane_current_path}'
bind-key '"' split-window -v -c '#{pane_current_path}'

set -g xterm-keys on
set -g default-terminal 'xterm-256color'

set -g base-index 1
set -g pane-base-index 1

set -g renumber-windows on
set -g automatic-rename on
set -g allow-rename on
set -g set-titles on
set -g set-titles-string '#S [#I - #W] #T'

set -g history-limit 10000

set -g status-position 'bottom'
set -g status-style 'bg=colour240,fg=colour251'
set -g window-status-style 'bg=colour240,fg=colour251,bold'
set -g window-status-format ' [#I] '
set -g window-status-current-style 'bg=colour254,fg=colour232,bold'
set -g window-status-current-format ' [#I - #W] '
set -g pane-border-style 'fg=colour251'
set -g pane-active-border-style 'bg=colour240,fg=colour251'
set -g status-interval 3
set -g status-left-length 30
set -g status-left '#[fg=colour15,bold] #(whoami) '
set -g status-right '#[fg=colour254,bright] [#(cut -d " " -f 1-3 /proc/loadavg)] #[bg=colour254,fg=colour232,bold]  %H:%M  '
set-option -g message-style 'bg=colour240,fg=colour251'
set-option -g display-panes-active-colour colour251
set-option -g display-panes-colour colour240
